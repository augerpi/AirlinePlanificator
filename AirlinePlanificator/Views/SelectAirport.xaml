<Window x:Class="AirlinePlanificator.Views.SelectAirport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:AirlinePlanificator.Views.Controls"
        Title="Aéroport" Height="500" Width="800">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Sélection d'un aéroport de départ" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="btnSelect" Content="Selectionner" Click="btnSelect_Click" />
        </StackPanel>
        <uc:AirportSelector x:Name="airportSelector" />
    </DockPanel>
</Window>
